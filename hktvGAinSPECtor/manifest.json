{
    "manifest_version": 2,
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "name": "hktvGAinSPECtor", 
    "description": "This Chrome extension aims at showing the GA spec of any element in HKTVmall with a tooltip.",
    "version": "1.0",
    "author": "Simon Cheuk",
    "permissions": [
        "activeTab"
     ],
    "content_scripts": [
        {
            "matches": ["https://www.hktvmall.com/*"],
            "js": [
                "jquery.js",
                "dash.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}